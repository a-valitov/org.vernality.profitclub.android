<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/colorStatusBarTransparent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.MyStyle</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppTheme.DarkStatusBarNoTranslucentNavigation" parent="AppTheme.DarkStatusBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:statusBarColor">@color/colorStatusBarDark</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <!--        <item name="popupMenuStyle">@style/PopupMenu.MyStyle</item>-->

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppTheme.DarkStatusBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:statusBarColor">@color/colorStatusBarDark</item>
        <item name="android:windowTranslucentNavigation">true</item>
<!--        <item name="popupMenuStyle">@style/PopupMenu.MyStyle</item>-->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.BottomNavStyle">
        <item name="android:background">@color/color_bottomNav</item>
        <item name="itemBackground">@color/colorAccent</item>
        <item name="itemTextColor">@color/colorAlert</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="Widget.Design.TabLayout">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceCorner_10dp" parent="ShapeAppearance.App.CornerImageView">
        <item name="cornerSize">5dp</item>
    </style>

    <style name="ShapeAppearance.App.CornerImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ContentLoadingProgressForWhiteBackground">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
<!--    <style name="AppTheme.NoActionBar">-->
<!--        <item name="android:statusBarColor">@color/colorAccent</item>-->
<!--        <item name="android:windowLightStatusBar">true</item>-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>




    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu.MyStyle</item>
        <!-- if using android.support.v7.widget.PopupMenu -->
<!--        <item name="popupMenuStyle">@style/PopupMenu.MyStyle</item>-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">end</item>
        <item name="android:elevation">2dip</item>


    </style>

    <style name="PopupMenu.MyStyle" parent="android:Widget.PopupMenu">

<!--        <item name="android:popupBackground">@android:color/white</item>-->
        <item name="android:dropDownVerticalOffset">10dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>

    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="MyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewButtonStyle" parent="BaseTextStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="BaseEditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/text_size_large</item>

        <item name="android:inputType">text</item>
    </style>

    <style name="BaseTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DatePickerDialogTheme">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorBackgroundGrayDark</item>
        <item name="buttonBarPositiveButtonStyle">@color/colorPrimary</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.EditText" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/cursor_color_dark</item>  // Cursor
        <item name="colorAccent">@color/colorPrimary</item>
    </style>


</resources>