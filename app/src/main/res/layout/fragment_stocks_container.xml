<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sliding_tabs_stocks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabBackground="@color/colorAccent"
        app:tabIndicatorColor="@color/colorStatusBarDark"
        app:tabSelectedTextColor="@color/colorStatusBarDark"
        app:tabTextColor="@color/color_bottomIconDisable"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_stocks"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="@android:color/white"
        />

</LinearLayout>