<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_task_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/colorAccent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_offerImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="31dp"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ShapeAppearance.App.CornerImageView"
            android:src="@drawable/a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nameSupplier"
                    android:layout_width="220dp"
                    android:layout_height="22dp"
                    android:layout_alignParentStart="true"
                    android:text="Osama ben Laden"
                    android:textColor="@color/colorStatusBarDark"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tv_period_offer"
                    android:text="15.05.2020"
                    android:layout_gravity="bottom"
                    android:textSize="8sp"
                    android:textStyle="normal"
                    android:textColor="@color/color_stocksSubTittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/tv_message_offer"
                android:text="subtittlekjjkhkhkhmjhvkghjhgjjhfgjhfgjhfgjhfgjhfgjjjfjfgjfgjfgjfjfhjfjfgjfgjfgjfgjjfgjfgjfgjfgjfgjfgjfgjfgjj"
                android:textSize="15sp"
                android:textColor="@color/color_stocksSubTittle"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginEnd="15dp"/>


        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

