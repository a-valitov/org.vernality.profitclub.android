<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="66dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_offer"
            android:layout_width="354dp"
            android:layout_height="52dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/colorStatusBarDark"
            android:text="@string/create_commercial_offer"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_create_action"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="354dp"
            android:layout_height="52dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/create_action"
            android:textAllCaps="false"
            android:textColor="@color/colorStatusBarDark"
            app:strokeColor="@color/colorStatusBarDark"
            app:strokeWidth="1dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>